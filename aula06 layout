//IMAGENS

import 'package:flutter/material.dart';

void main(){
  
  runApp(MaterialApp(
  
  title:"Trabalhando com imagens",
  home: Container(
    margin: EdgeInsets.only ( top:100 ),
    decoration: BoxDecoration(
     border:Border.all(width: 3, color: Colors.lightBlue)
    ),
    child:Image.asset(
    "images:mesa.jpg",
      fit:BoxFit.scaleDown,
    
    )
    
  ),
  
  
  ));
  
  
}  
